{
  "cdhVersion": "6.1.1",
  "services": [
    {
      "refName": "zookeeper",
      "serviceType": "ZOOKEEPER",
      "roleConfigGroups": [
        {
          "refName": "zookeeper-SERVER-BASE",
          "roleType": "SERVER",
          "base": true
        }
      ]
    },
    {
      "refName": "hdfs",
      "serviceType": "HDFS",
      "roleConfigGroups": [
        {
          "refName": "hdfs-NAMENODE-BASE",
          "roleType": "NAMENODE",
          {% if cloud_provider == 'yarn' %}
          "configs": [
            {
              "name": "dfs_name_dir_list",
              "value": "/hadoopfs/fs1/namenode"
            }
          ],
          {% endif %}
          "base": true
        },
        {
          "refName": "hdfs-SECONDARYNAMENODE-BASE",
          "roleType": "SECONDARYNAMENODE",
          {% if cloud_provider == 'yarn' %}
          "configs": [
            {
              "name": "fs_checkpoint_dir_list",
              "value": "/hadoopfs/fs1/secondarynamenode"
            }
          ],
          {% endif %}
          "base": true
        },
        {
          "refName": "hdfs-DATANODE-BASE",
          "roleType": "DATANODE",
          {% if cloud_provider == 'yarn' %}
          "configs": [
            {
              "name": "dfs_data_dir_list",
              "value": "/hadoopfs/fs1/datanode"
            },
            {
              "name": "dfs_datanode_failed_volumes_tolerated",
              "value": "0"
            }
          ],
          {% endif %}
          "base": true
        },
        {
          "refName": "hdfs-BALANCER-BASE",
          "roleType": "BALANCER",
          "base": true
        },
        {
          "refName": "hdfs-NFSGATEWAY-BASE",
          "roleType": "NFSGATEWAY",
          "base": true
        },
        {
          "refName": "hdfs-GATEWAY-BASE",
          "roleType": "GATEWAY",
          "base": true
        }
      ]
    },
    {
      "refName": "yarn",
      "serviceType": "YARN",
      "roleConfigGroups": [
        {
          "refName": "yarn-RESOURCEMANAGER-BASE",
          "roleType": "RESOURCEMANAGER",
          "base": true
        },
        {
          "refName": "yarn-NODEMANAGER-BASE",
          "roleType": "NODEMANAGER",
          {% if cloud_provider == 'yarn' %}
          "configs": [
            {
              "name": "yarn_nodemanager_local_dirs",
              "value": "/hadoopfs/fs1/nodemanager"
            }
          ],
          {% endif %}
          "base": true
        },
        {
          "refName": "yarn-JOBHISTORY-BASE",
          "roleType": "JOBHISTORY",
          "base": true
        }
      ]
    }
  ],
  "hostTemplates": [
    {
      "refName": "master",
      "roleConfigGroupsRefNames": [
        "hdfs-BALANCER-BASE",
        "hdfs-NAMENODE-BASE",
        "hdfs-SECONDARYNAMENODE-BASE",
        "hdfs-GATEWAY-BASE",
        "hdfs-NFSGATEWAY-BASE",
        "yarn-JOBHISTORY-BASE",
        "yarn-RESOURCEMANAGER-BASE",
        "zookeeper-SERVER-BASE"
      ],
      "cardinality": null
    },
    {
      "refName": "worker",
      "roleConfigGroupsRefNames": [
        "hdfs-DATANODE-BASE",
        "yarn-NODEMANAGER-BASE"
      ],
      "cardinality": null
    }
  ],
  "displayName": "sit-test-cluster"
}